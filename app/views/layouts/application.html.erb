<!DOCTYPE html>
<html>
  <head>
    <title>Instafoto</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid container-background">
     <div class="container">

        <ul class="nav">
          <li class="nav-item">
            <%= link_to "FunnyPhotos", root_path, class:'nav-landing' %>
          </li>
         
          <li class="nav-item">
            <%= link_to "O проекте", pages_about_path, class:'nav-landing' %>
          </li>
          <%if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Выйти", destroy_user_session_path, method:delete, class:'nav-landing' %>
          </li>
          <<% end %>

        </ul>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
        
      <%= yield %>

    </div>
   </div>
  </body>
</html>
